<div class="container">
  <h1>Cocktails</h1>
  <ul>
    <% @cocktails.each do |cocktail| %>
     <li><%=link_to cocktail.name, cocktail_path(cocktail) %></li>
     <%= link_to 'Delete this cocktail', cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  </ul>

  <h2>Create a new cocktail</h2>
  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>

    </div>
  <% end %>

  <%= link_to 'Back to all Cocktails', cocktails_path %>
</div>
